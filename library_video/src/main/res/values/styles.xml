<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="vi_style_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/vi_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="vi_popup_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="vi_pop_animation">
        <item name="android:windowEnterAnimation">@anim/vi_from_bottom_anim_in</item>
        <item name="android:windowExitAnimation">@anim/vi_from_bottom_anim_out</item>
    </style>

</resources>
