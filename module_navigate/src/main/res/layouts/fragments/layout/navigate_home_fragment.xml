<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.knight.kotlin.library_widget.CompatToolBar
        android:id="@+id/navigate_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigate_home_toolbar_color">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/hierachy_navigate_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigate_indicator_height"/>


    </com.knight.kotlin.library_widget.CompatToolBar>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/hierachy_navigate_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>