<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_eye_daily_toolbar"
        layout="@layout/base_include_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.youth.banner.Banner
        android:id="@+id/eye_daily_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eye_daily_banner_height"
        app:layout_constraintTop_toBottomOf="@id/include_eye_daily_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:banner_indicator_normal_color="@color/eye_daily_banner_normal_color"
        app:banner_indicator_selected_color="@android:color/white"
        app:banner_indicator_normal_width="@dimen/eye_daily_banner_normal_width"
        app:banner_indicator_selected_width="@dimen/eye_daily_banner_selected_width"
        />
    <com.knight.kotlin.module_eye_daily.view.MyCustomBannerIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eye_daily_banner_indicator_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/eye_daily_banner" />


