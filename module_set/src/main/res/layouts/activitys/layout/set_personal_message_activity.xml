<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/include_set_message_toobar"
        layout="@layout/base_include_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <RelativeLayout
        android:id="@+id/set_rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/include_set_message_toobar"
        android:layout_marginTop="@dimen/set_rl_user_name_margin_top"
        android:background="@drawable/base_line_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="@dimen/set_rl_user_name_padding_bottom">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_user_name"
            android:layout_marginLeft="@dimen/set_tv_user_name_margin_left"
            android:textColor="@color/set_tv_user_name_color"
            android:textSize="@dimen/set_tv_user_name_text_size"/>


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/set_tv_user_name_margin_right"
            android:text="深红骑士"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/set_rl_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_rl_user_name"
        android:layout_marginTop="@dimen/set_rl_user_name_margin_top"
        android:background="@drawable/base_line_bg"
        android:paddingBottom="@dimen/set_rl_user_email_padding_bottom">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_user_email"
            android:layout_marginLeft="@dimen/set_tv_user_email_margin_left"
            android:textColor="@color/set_tv_user_name_color"
            android:textSize="@dimen/set_tv_user_name_text_size"/>

        <TextView
            android:id="@+id/tv_user_eamil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/set_tv_user_email_margin_right"
            android:text="深红骑士"
            />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/set_rl_coin_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_rl_email">



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>