<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/set_rl_language_adapter_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knight.kotlin.module_set.adapter.SelectLanguageAdapter"
    >

    <TextView
        android:id="@+id/set_tv_language_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/set_tv_language_name_color"
        android:textSize="@dimen/set_tv_language_name_text_size"
        android:layout_marginLeft="@dimen/set_tv_language_name_margin_left"/>




    <ImageView
        android:id="@+id/set_iv_select_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/set_iv_select_language_margin_right"
        android:src="@drawable/base_select_check"/>

    <TextView
        android:id="@+id/set_tv_language_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_tv_language_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/base_line_color" />


</RelativeLayout>