<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/set_select_dark_item_height">



    <TextView
        android:id="@+id/set_tv_dark_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="@color/set_tv_dark_name_color"
        android:textSize="@dimen/set_tv_dark_name_text_size"/>

    <ImageView
        android:id="@+id/set_iv_select_darkmodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/set_iv_select_darkmodel_margin_right"
        android:src="@drawable/base_select_check" />

    <TextView
        android:id="@+id/set_tv_darkmodel_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_tv_darkmodel_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/base_line_color" />
</RelativeLayout>