<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/course_adapter_detail_list_cl_color"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/course_item_articleauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/course_detail_list_margin_start"
        android:layout_marginTop="@dimen/course_detail_list_margin_top"
        android:paddingRight="@dimen/course_detail_list_padding_right"
        android:text="232323"
        android:textColor="@color/course_detail_list_articleauthor_color"
        android:textSize="@dimen/course_detail_list_articleauthor_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/course_tv_articlechaptername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/course_detail_list_articlechaptername_margin_right"
        android:background="@drawable/base_articlechapter_type"
        android:paddingLeft="@dimen/course_detail_list_articlechaptername_padding_left"
        android:paddingTop="@dimen/course_detail_list_articlechaptername_padding_top"
        android:paddingRight="@dimen/course_detail_list_articlechaptername_padding_right"
        android:paddingBottom="@dimen/course_detail_list_articlechaptername_padding_bottom"
        android:text="广泛他"
        android:textColor="@color/base_color_theme"
        android:textSize="@dimen/course_detail_list_articlechaptername_text_size"
        app:layout_constraintBottom_toBottomOf="@id/course_item_articleauthor"
        app:layout_constraintLeft_toRightOf="@id/course_item_articleauthor"
        app:layout_constraintTop_toTopOf="@id/course_item_articleauthor" />

    <TextView
        android:id="@+id/course_tv_articletitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/course_detail_list_tv_articletitle_margin_left"
        android:layout_marginTop="@dimen/course_detail_list_tv_articletitle_margin_top"
        android:layout_marginRight="@dimen/course_detail_list_tv_articletitle_margin_right"
        android:text="这是标题标题这是标题标题这是标题标题这是标题标题这是标题标题"
        android:textColor="@color/course_detail_list_tv_articletitle_color"
        android:textSize="@dimen/course_detail_list_tv_articletitle_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_item_articleauthor" />


    <TextView
        android:id="@+id/course_item_articledata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/course_detail_list_tv_articledata_margin_left"
        android:layout_marginTop="@dimen/course_detail_list_tv_articledata_margin_top"
        android:text="一天前"
        android:textColor="@color/course_detail_list_tv_articledata_color"
        android:textSize="@dimen/course_detail_list_tv_articledata_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_tv_articletitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/course_detail_list_bottom_view_height"
        android:layout_marginTop="@dimen/course_detail_list_bottom_view_margin_top"
        android:background="@color/base_item_bottom_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_item_articledata" />
</androidx.constraintlayout.widget.ConstraintLayout>