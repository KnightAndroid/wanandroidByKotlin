<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/utils_adapter_cv_item_margin_top"
    android:layout_marginLeft="@dimen/utils_adapter_cv_item_margin_left"
    android:layout_marginRight="@dimen/utils_adapter_cv_item_margin_right"
    android:layout_marginBottom="@dimen/utils_adapter_cv_item_margin_bottom"
    app:cardCornerRadius="@dimen/utils_adapter_cv_item_radius"
    android:foreground="?android:attr/selectableItemBackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/utils_adapter_cl_item_margin_bottom"
        >

        <TextView
            android:id="@+id/utils_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/utils_adapter_tv_title_margin_top"
            android:layout_marginLeft="@dimen/utils_adapter_tv_title_margin_left"
            android:paddingRight="@dimen/utils_adapter_tv_title_padding_right"
            android:text="232323"
            android:textColor="@color/base_color_theme"
            android:textSize="@dimen/utils_adapter_tv_title_text_size"/>

        <TextView
            android:id="@+id/utils_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/utils_title"
            android:textSize="@dimen/utils_adapter_tv_desc_text_size"
            android:layout_marginTop="@dimen/utils_adapter_tv_desc_margin_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="这是一个开源库这是一个开源库这是一个开源库这是一个开源库这是一个开源库"
            android:layout_marginLeft="@dimen/utils_adapter_tv_desc_margin_left"
            android:layout_marginRight="@dimen/utils_adapter_tv_desc_margin_right"
            android:textColor="@color/utils_adapter_tv_desc_color"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>