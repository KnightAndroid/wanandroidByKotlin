<?xml version="1.0" encoding="utf-8"?>
<com.knight.kotlin.library_widget.ReuseNestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/rv_game_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/realtime_rv_game_category_margin_top"
            android:background="@color/realtime_indicator_background"

            >

        </com.yanzhenjie.recyclerview.SwipeRecyclerView>






        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/rv_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/base_round"
            android:layout_marginLeft="@dimen/realtime_rv_game_margin_left"
            android:layout_marginRight="@dimen/realtime_rv_game_margin_right"
            android:layout_marginTop="@dimen/realtime_rv_game_margin_top"

            />


    </LinearLayout>







</com.knight.kotlin.library_widget.ReuseNestedScrollView>