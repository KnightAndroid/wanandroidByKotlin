<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/include_set_message_toobar"
        layout="@layout/base_include_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <RelativeLayout
        android:id="@+id/set_rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_rl_user_name_height"
        app:layout_constraintTop_toBottomOf="@id/include_set_message_toobar"
        android:background="@drawable/base_line_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_user_name"
            android:layout_marginLeft="@dimen/set_tv_user_name_margin_left"
            android:layout_centerVertical="true"
            android:textColor="@color/set_tv_user_name_color"
            android:textSize="@dimen/set_tv_user_name_text_size"/>


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/set_tv_user_name_margin_right"
          />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/set_rl_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_rl_email_height"
        app:layout_constraintTop_toBottomOf="@id/set_rl_user_name"
        android:background="@drawable/base_line_bg"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_user_email"
            android:layout_marginLeft="@dimen/set_tv_user_email_margin_left"
            android:textColor="@color/set_tv_email_color"
            android:textSize="@dimen/set_tv_user_name_text_size"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_user_eamil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/set_tv_user_email_margin_right"
            />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/set_rl_coin_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_rl_coins_height"
        app:layout_constraintTop_toBottomOf="@id/set_rl_email"
        android:background="@drawable/base_line_bg"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_user_coincount"
            android:layout_marginLeft="@dimen/set_tv_user_coin_margin_left"
            android:textColor="@color/set_tv_coins_color"
            android:textSize="@dimen/set_tv_user_name_text_size"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/tv_coin_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/set_tv_user_coins_margin_right"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/set_rl_rank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_rl_rank_height"
        app:layout_constraintTop_toBottomOf="@id/set_rl_coin_count"
        android:background="@drawable/base_line_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_user_rank"
            android:layout_marginLeft="@dimen/set_tv_user_rank_margin_left"
            android:textColor="@color/set_tv_coins_color"
            android:textSize="@dimen/set_tv_user_name_text_size"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/set_tv_user_rank_margin_right"
            />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>