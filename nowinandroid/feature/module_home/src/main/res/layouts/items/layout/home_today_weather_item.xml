<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >





    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_today_bg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shapeAppearance="@style/home_news_weather_RoundedCorners"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_icon_zaobao"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/home_icon_zaobao_margin_top"
        android:layout_marginRight="@dimen/home_icon_zaobao_margin_right"/>

    <TextView
        android:id="@+id/tv_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/home_tv_week_day_margin_left"
        android:layout_marginTop="@dimen/home_tv_week_day_margin_top"
        android:textSize="@dimen/home_tv_week_day_text_size"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@android:color/white"
        />


    <TextView
        android:id="@+id/tv_today_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_week_day"
        android:layout_marginLeft="@dimen/home_tv_today_temperature_margin_left"
        android:layout_marginTop="@dimen/home_tv_today_temperature_margin_top"
        android:textSize="@dimen/home_tv_today_temperature_text_size"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/tv_today_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_today_temperature"
        android:layout_marginLeft="@dimen/home_tv_today_weather_margin_left"
        android:layout_marginTop="@dimen/home_tv_today_weather_margin_top"
        android:textSize="@dimen/home_tv_today_weather_text_size"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/tv_rain_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/home_tv_rain_info_margin_left"
        android:layout_marginTop="@dimen/home_tv_rain_info_margin_top"
        app:layout_constraintTop_toBottomOf="@id/tv_today_weather"
        android:textSize="@dimen/home_tv_rain_info_text_size"
        android:drawableLeft="@drawable/home_icon_rainfall"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_tip_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"
        android:layout_marginLeft="@dimen/home_tv_tip_info_margin_left"
        android:layout_marginRight="@dimen/home_tv_tip_info_margin_right"
        android:layout_marginTop="@dimen/home_tv_tip_info_margin_top"
        app:layout_constraintTop_toBottomOf="@id/tv_rain_info"
        android:textSize="@dimen/home_tv_tip_info_text_size"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@android:color/white"
     />


</androidx.constraintlayout.widget.ConstraintLayout>