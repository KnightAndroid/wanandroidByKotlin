<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_tv_commend_background">


    <com.knight.kotlin.library_widget.shadeview.FpShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fp_shadowColor="#20000000"
        app:fp_shadowRadius="8dp"
        app:fp_shadowShape="fp_rectangle"
        app:fp_shadowSide="fp_top">



    <LinearLayout
        android:id="@+id/home_ll_seemorearticles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >



        <TextView
            android:id="@+id/home_tv_seemorearticles"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_tv_seemorearticles_height"
            android:textSize="@dimen/home_tv_seemorearticles_text_size"
            android:text="@string/home_toparticle_expand_foot"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/home_iv_toparticlearrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_iv_toparticlearrow_margin_left"
            android:elevation="18dp"
            android:background="@drawable/home_icon_expand_arrowdown"/>




    </LinearLayout>
    </com.knight.kotlin.library_widget.shadeview.FpShadowLayout>
</RelativeLayout>