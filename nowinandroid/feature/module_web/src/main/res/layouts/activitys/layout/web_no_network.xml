<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/web_view_no_network_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/web_no_network_title_margin_top"
        android:text="@string/web_network_error"
        android:textColor="@color/web_no_network_title_text_color"
        android:textSize="@dimen/web_no_network_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/web_no_network_margin_top"
        android:text="@string/web_view_please_retry"
        android:textColor="@color/web_no_network_retry" />
</LinearLayout>