<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.knight.kotlin.library_util.DateUtils" />
        <variable
            name="viewModel"
            type="com.knight.kotlin.module_eye_recommend.entity.EyeRecommendVideoEntity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_eye_recommend_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/eye_recommend_video_item_height"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            bind:imageUrl="@{viewModel.cover.url}"
            />








        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_eye_recommend_video_author"
            android:layout_width="@dimen/eye_recommend_video_item_iv_author_width"
            android:layout_height="@dimen/eye_recommend_video_item_iv_author_height"
            android:layout_marginTop="@dimen/eye_recommend_video_item_iv_author_margin_top"
            android:layout_marginStart="@dimen/eye_recommend_video_item_iv_author_margin_start"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_eye_recommend_cover"
            app:shapeAppearance="@style/base_circleStyle"
            app:imageUrl="@{viewModel.author.avatar.url}"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_eye_recommend_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eye_recommend_video_item_tv_title_margin_start"
            android:layout_marginTop="@dimen/eye_recommend_video_item_tv_title_margin_top"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/eye_recommend_video_item_tv_title_text_color"
            android:textSize="@dimen/eye_recommend_video_item_tv_title_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_eye_recommend_video_author"
            app:layout_constraintTop_toBottomOf="@id/iv_eye_recommend_video_author"
            android:text="@{viewModel.title}"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_eye_recommend_video_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eye_recommend_video_item_tv_desc_margin_start"
            android:layout_marginTop="@dimen/eye_recommend_video_item_tv_desc_margin_top"
            android:textColor="@color/eye_recommend_video_item_tv_desc_text_color"
            android:textSize="@dimen/eye_recommend_video_item_tv_desc_text_size"
            app:layout_constraintLeft_toRightOf="@id/iv_eye_recommend_video_author"
            app:layout_constraintTop_toBottomOf="@id/tv_eye_recommend_video_title" />





        <TextView
            android:id="@+id/tv_eye_recommend_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/eye_recommend_video_item_tv_category_text_color"
            android:layout_marginLeft="@dimen/eye_recommend_video_category_margin_left"
            app:layout_constraintLeft_toRightOf="@id/tv_eye_recommend_video_desc"
            app:layout_constraintTop_toTopOf="@id/tv_eye_recommend_video_desc" />








        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_eye_recommend_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_eye_recommend_video_desc"
            app:layout_constraintStart_toEndOf="@id/tv_eye_recommend_category"
            android:textColor="@color/eye_recommend_video_item_tv_video_time_text_color"
            android:drawableLeft="@drawable/eye_recommend_video_play_icon"
            android:drawablePadding="@dimen/eye_recommend_video_item_tv_time_drawable_padding"
            android:layout_marginStart="@dimen/eye_recommend_video_item_tv_time_margin_start"
            />

        <ImageView
            android:id="@+id/tv_eye_recommend_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eye_recommend_video_share_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_eye_recommend_cover"
            android:layout_marginEnd="@dimen/eye_recommend_video_tv_share_margin_end"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>