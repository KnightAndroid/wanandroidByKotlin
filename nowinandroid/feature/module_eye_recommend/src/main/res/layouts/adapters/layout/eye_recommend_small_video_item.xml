<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
   >

    <data>

        <import type="com.knight.kotlin.library_util.DateUtils" />
        <variable
            name="viewModel"
            type="com.knight.kotlin.module_eye_recommend.entity.EyeRecommendVideoEntity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_eye_recommend_small_video_cover"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45"
            app:shapeAppearance="@style/base_roundedCornerStyle"
            app:imageUrl="@{viewModel.cover.url}"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_eye_recommend_small_video_time"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="@dimen/eye_recommend_small_video_card_mb_time_width"
            android:layout_height="@dimen/eye_recommend_small_video_card_mb_time_height"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/eye_recommend_small_video_card_mb_time_margin_end"
            android:layout_marginBottom="@dimen/eye_recommend_small_video_card_mb_time_margin_bottom"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eye_recommend_small_video_card_mb_time_text_size"
            app:backgroundTint="@color/eye_recommend_small_video_card_mb_time_background_tint"
            app:cornerRadius="@dimen/eye_recommend_small_video_card_mb_time_corner_radius"
            android:text="@{viewModel.duration.text}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_eye_recommend_small_video_cover"
            app:layout_constraintEnd_toEndOf="@+id/iv_eye_recommend_small_video_cover" />



        <TextView
            android:id="@+id/tv_eye_recommend_small_video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/eye_recommend_small_video_item_title_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_eye_recommend_small_video_cover"
            app:layout_constraintTop_toTopOf="@+id/iv_eye_recommend_small_video_cover"
            tools:text="这不是你想的那种羞羞的广告 [ 真的] !"
            android:text="@{viewModel.title}"/>

        <TextView
            android:id="@+id/tv_eye_recommend_small_video_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/eye_recommend_small_video_category_text_color"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_eye_recommend_small_video_cover"
            app:layout_constraintStart_toEndOf="@+id/iv_eye_recommend_small_video_cover"
            tools:text="# 广告 / 开眼精选" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>