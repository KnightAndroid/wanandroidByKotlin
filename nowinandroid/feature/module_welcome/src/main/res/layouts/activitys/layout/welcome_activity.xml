<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeActivity">

    <com.knight.kotlin.library_widget.AnimLogoView
        android:id="@+id/logo_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlay="false"
        app:gradientAnimDuration="1600"
        app:gradientColor="@color/base_color_theme"
        app:logoName="wanandroid"
        app:offsetAnimDuration="1500"
        app:showGradient="true"
        app:textColor="@color/base_color_theme"
        app:textSize="30sp"
        app:verticalOffset="0dp"/>


</FrameLayout>