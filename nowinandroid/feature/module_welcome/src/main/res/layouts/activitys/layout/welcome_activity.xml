<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".activity.WelcomeActivity"
    >



    <com.knight.kotlin.library_widget.AnimLogoView
        android:id="@+id/logo_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlay="false"
        app:gradientAnimDuration="1600"
        app:gradientColor="@color/base_color_theme"
        app:logoName="wanandroid"
        app:offsetAnimDuration="1500"
        app:showGradient="true"
        app:textColor="@color/base_color_theme"
        app:textSize="30sp"
        app:verticalOffset="0dp"/>


    <com.knight.kotlin.library_widget.SimpleProgressBar
        android:id="@+id/pb_load_so"
        android:layout_width="match_parent"
        android:layout_height="@dimen/welcome_privacy_load_so_pb_height"
        app:simplestroke="60"
        app:simpleprogress="0"
        app:simplebackgroundcolor="#EAEAEA"
        app:simpleprogresscolor="@color/base_color_theme"
        android:layout_marginLeft="@dimen/welcome_privacy_load_so_pb_margin_left"
        android:layout_marginRight="@dimen/welcome_privacy_load_so_pb_margin_right"
        android:layout_marginBottom="@dimen/welcome_privacy_load_so_pb_margin_bottom"
        android:layout_gravity="bottom"
        app:simpleShowText="true"
        android:visibility="gone"/>

</FrameLayout>