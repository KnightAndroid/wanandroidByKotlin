<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/mine_cl_coin_padding_bottom">

        <com.knight.kotlin.library_widget.CountNumberView
            android:id="@+id/tv_head_detailpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mine_tv_head_detailpoint_margin_top"
            android:textSize="@dimen/mine_tv_head_detailpoint_text_size"
            android:textColor="@color/base_color_theme"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/mine_ll_point_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mine_ll_point_rule_margin_top"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_head_detailpoint">

            <TextView
                android:id="@+id/mine_tv_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_rule"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/mine_tv_rule_text_size"/>


            <ImageView
                android:id="@+id/mine_iv_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mine_iv_rule_margin_left"
                android:background="@drawable/mine_iv_pointrule" />





        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

