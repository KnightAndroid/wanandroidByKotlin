<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="title"
            type="java.lang.String" />

    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">













       <androidx.core.widget.NestedScrollView
           android:id="@+id/nest_fortune"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:fillViewport="true"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">



               <ImageView
                   android:id="@+id/constellate_top_bg"
                   android:layout_width="match_parent"
                   android:layout_height="280dp"
                   android:background="@drawable/constellate_main_top_bg"/>


               <com.knight.kotlin.library_widget.DoubleCloudView
                   android:id="@+id/constellate_cloud_view"
                   android:layout_width="wrap_content"
                   android:layout_height="180dp"
                   android:layout_marginTop="100dp"
                   />


               <FrameLayout
                   android:id="@+id/fr_constellate_head_border"
                   android:layout_width="122dp"
                   android:layout_height="122dp"
                   android:layout_marginTop="60dp"
                   android:layout_gravity="center"
                   android:background="@drawable/constellate_transparent_circle_bg"
                   android:layout_centerHorizontal="true">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@drawable/constellate_head_bg"/>

                   <ImageView
                       android:id="@+id/constellate_head_iv"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:scaleType="centerCrop"
                       android:layout_gravity="center"

                       />


               </FrameLayout>

               <RelativeLayout
                   android:id="@+id/rl_change_constellate"
                   android:layout_width="100dp"
                   android:layout_height="30dp"
                   android:layout_below="@id/fr_constellate_head_border"
                   android:background="@drawable/constellate_select_bg"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="10dp"
                 >


                   <TextView
                       android:id="@+id/tv_constellate_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_centerVertical="true"
                       android:drawablePadding="5dp"
                       android:drawableRight="@drawable/constellate_select_arrow_icon"
                       android:textColor="@color/constellate_tv_name_text_color" />

               </RelativeLayout>




               <TextView
                   android:id="@+id/tv_shortcomment"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/rl_change_constellate"
                   android:layout_centerHorizontal="true"
                   android:textColor="#555555"
                   android:textStyle="bold"
                   android:textSize="24sp"
                   android:layout_marginTop="20dp"/>


               <LinearLayout
                   android:id="@+id/ll_constellate_time"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_below="@id/tv_shortcomment"
                   android:layout_marginTop="30dp">


                   <TextView
                       android:id="@+id/tv_first_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/constellate_tv_first_time_text_color"
                       android:textStyle="bold"
                       android:textSize="24sp"
                       android:layout_marginStart="10dp"/>


                   <TextView
                       android:id="@+id/tv_end_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/constellate_tv_end_time_text_color"
                       android:textSize="16sp"
                       android:layout_marginStart="2dp"/>
                   <!-- 空的 View 占满中间区域，实现右对齐 -->
                   <View
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                       android:layout_weight="1" />


                   <com.google.android.material.tabs.TabLayout
                       android:id="@+id/constellate_tabLayout"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:tabMode="fixed"
                       app:tabGravity="fill"
                       app:tabIndicatorFullWidth="false"
                       app:tabSelectedTextColor="@color/constellate_tab_select_text_color"
                       app:tabIndicatorColor="@color/constellate_tab_select_text_color"/>
               </LinearLayout>


               <View
                   android:id="@+id/view_line"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/base_line_color"
                   android:layout_below="@id/ll_constellate_time"/>

               <com.knight.kotlin.library_widget.NestedScrollableHost
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_below="@id/view_line"
                   android:layout_marginTop="10dp">
                   <androidx.viewpager2.widget.ViewPager2
                       android:id="@+id/constellate_viewPager"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />
               </com.knight.kotlin.library_widget.NestedScrollableHost>





           </RelativeLayout>


       </androidx.core.widget.NestedScrollView>





        <include
            android:id="@+id/constellate_fate_toolbar"
            layout="@layout/base_include_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:title="@{title}"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>



