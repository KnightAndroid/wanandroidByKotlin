<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.yanzhenjie.recyclerview.SwipeRecyclerView
        android:id="@+id/rv_constellate_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/ll_lucky_message"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_constellate_date">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/constellate_lucky_color"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            >


            <RelativeLayout
                android:id="@+id/rl_fortune_color"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/base_circle">


                <TextView
                    android:id="@+id/tv_lucky_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="酒红"
                    android:textColor="#a274d7"
                    android:textSize="26sp" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_fortune_color"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="幸运颜色"
                android:textColor="#a274d7" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/constellate_lucky_number"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">


            <RelativeLayout
                android:id="@+id/rl_fortune_number"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/base_circle">


                <TextView
                    android:id="@+id/tv_lucky_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="6"
                    android:textColor="#a274d7"
                    android:textSize="26sp" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_fortune_number"
                android:layout_centerHorizontal="true"
                android:text="幸运数字"
                android:layout_marginTop="10dp"
                android:textColor="#52aed7" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/constellate_lucky_star"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp">

            <RelativeLayout
                android:id="@+id/rl_fortune_constellate"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/base_circle">


                <ImageView
                    android:id="@+id/iv_lucky_constellate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"/>


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_fortune_constellate"
                android:layout_centerHorizontal="true"
                android:text="速配星座"
                android:layout_marginTop="10dp"
                android:textColor="#f4b276" />


        </RelativeLayout>







    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_suitable_taboo"
        app:layout_constraintTop_toBottomOf="@id/ll_lucky_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/constellate_suitable_bg"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp">


            <TextView
                android:id="@+id/tv_constellate_suitable_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="宜"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#47ac60"/>


            <View
                android:id="@+id/view_suitable"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/constellate_suitable_view_bg"
                android:layout_below="@id/tv_constellate_suitable_title"/>

            <TextView
                android:id="@+id/tv_constellate_suitable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_suitable"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#333333" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/constellate_taboo_bg"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp">


            <TextView
                android:id="@+id/tv_constellate_taboo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="忌"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#e36b6b"/>


            <View
                android:id="@+id/view_taboo"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/constellate_taboo_view_bg"
                android:layout_below="@id/tv_constellate_taboo_title"/>

            <TextView
                android:id="@+id/tv_constellate_taboo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_taboo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#333333" />


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_today_fortune_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/constellate_ll_fortune_today_height"
        app:layout_constraintTop_toBottomOf="@id/ll_suitable_taboo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="center">


        <View
            android:layout_width="@dimen/constellate_view_fortune_today_width"
            android:layout_height="match_parent"
            android:background="@drawable/constellate_fortune_title_view_bg"
            android:layout_marginLeft="@dimen/constellate_view_fortune_today_margin_left"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/constellate_today_fortune_title"
            android:textColor="@color/constellate_today_title_text_color"
            android:layout_marginLeft="@dimen/constellate_view_fortune_today_margin_left"
            android:textSize="@dimen/constellate_today_fortune_title_text_size"
            android:textStyle="bold"/>

    </LinearLayout>



    <com.yanzhenjie.recyclerview.SwipeRecyclerView
        android:id="@+id/rv_constellate_type_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_today_fortune_title" />


    <com.yanzhenjie.recyclerview.SwipeRecyclerView
        android:id="@+id/rv_constellate_fortune_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_constellate_type_value" />
</androidx.constraintlayout.widget.ConstraintLayout>