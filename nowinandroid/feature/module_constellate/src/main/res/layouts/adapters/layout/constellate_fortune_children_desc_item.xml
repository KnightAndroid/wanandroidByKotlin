<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp">


    <ImageView
        android:id="@+id/iv_constellate_child_fortune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/constellate_small_study_icon"/>


        <TextView
            android:id="@+id/tv_fortune_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_constellate_child_fortune"
            app:layout_constraintBottom_toBottomOf="@id/iv_constellate_child_fortune"
            app:layout_constraintStart_toEndOf="@id/iv_constellate_child_fortune"
            android:layout_marginStart="10dp"
            android:text="学习"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/constellate_tv_fortune_type_name_text_color"/>





        <TextView
            android:id="@+id/tv_fortune_child_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fortune_child_name"
            app:layout_constraintStart_toStartOf="@id/tv_fortune_child_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="@dimen/constellate_tv_fortune_desc_margin_top"
            android:layout_marginBottom="@dimen/constellate_tv_fortune_desc_margin_bottom"
            android:textColor="@color/constellate_tv_fortune_desc_text_color"
            tools:text="这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述"/>






</androidx.constraintlayout.widget.ConstraintLayout>