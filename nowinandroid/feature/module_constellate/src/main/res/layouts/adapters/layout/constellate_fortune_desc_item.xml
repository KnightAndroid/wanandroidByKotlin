<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp">






    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/base_round"
        >

        <TextView
            android:id="@+id/tv_fortune_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合运势"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="26sp"
            android:textColor="#333333"/>

        <com.knight.kotlin.library_widget.StarBar
            android:id="@+id/fortune_star_bar"
            app:layout_constraintLeft_toRightOf="@id/tv_fortune_type_name"
            app:layout_constraintTop_toTopOf="@id/tv_fortune_type_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_fortune_type_name"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:star_height="25dp"
            app:star_max="5"
            app:star_orientation="star_horizontal"

            app:star_width="25dp"/>



        <TextView
            android:id="@+id/tv_fortune_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fortune_type_name"
            app:layout_constraintStart_toStartOf="@id/tv_fortune_type_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述"/>



        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/rv_constellate_children"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_fortune_type_name"
            app:layout_constraintTop_toBottomOf="@id/tv_fortune_desc"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




   <ImageView
       android:id="@+id/iv_constellate_fortune"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginTop="20dp"
       android:background="@drawable/constellate_all_icon"
       android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>