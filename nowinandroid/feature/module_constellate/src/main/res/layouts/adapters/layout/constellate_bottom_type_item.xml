<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >







            <RelativeLayout
                android:id="@+id/constellate_bottom_head_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >



                <ImageView
                    android:id="@+id/constellate_bottom_type_head_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"/>



                <ImageView
                    android:id="@+id/iv_select_constellate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/constellate_select_name_icon"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_constellate_bottom"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                app:layout_constraintTop_toBottomOf="@id/constellate_bottom_head_rl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <TextView
                    android:id="@+id/tv_constellate_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3.21"
                    android:textColor="@color/constellate_bottom_tv_date_text_color"
                    android:textSize="12sp"
                    android:layout_toLeftOf="@id/constellate_bottom_name_tv"
                    android:gravity="bottom"/>

                <TextView
                    android:id="@+id/constellate_bottom_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="白羊座"
                    android:textSize="14sp"
                    android:gravity="bottom"
                    android:textColor="@color/constellate_bottom_tv_title_text_color"
                    />


                <TextView
                    android:id="@+id/tv_constellate_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4.19"
                    android:textColor="@color/constellate_bottom_tv_date_text_color"
                    android:layout_toRightOf="@id/constellate_bottom_name_tv"
                    android:textSize="12sp"
                    android:gravity="bottom"/>


            </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
