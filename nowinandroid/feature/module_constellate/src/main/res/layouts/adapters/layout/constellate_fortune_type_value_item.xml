<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/cl_fortune_type_value">







            <com.knight.kotlin.library_widget.VerticalProgressBar
                android:id="@+id/pb_type_fortune_value"
                android:layout_width="20dp"
                android:layout_height="100dp"
                app:vertical_max="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:vertical_backgroundColorCustom="#f3f3f3"
                app:vertical_cornerRadius="45dp"
                app:vertical_startProgressColor="#F872CA"
                app:vertical_endProgressColor="#FE97DB"
                app:vertical_isGradientEnabled="true"/>


         <TextView
             android:id="@+id/tv_fortune_type_value"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="96"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="5dp"
             android:textSize="16sp"
             app:layout_constraintTop_toBottomOf="@id/pb_type_fortune_value"/>

          <TextView
              android:id="@+id/tv_fortune_type"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="事业"
              app:layout_constraintTop_toBottomOf="@id/tv_fortune_type_value"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:textColor="@color/constellate_fortune_type_text_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>