<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnimLogoView">
        <attr name="logoName" format="string" />
        <attr name="autoPlay" format="boolean" />
        <attr name="offsetAnimDuration" format="integer" />
        <attr name="gradientAnimDuration" format="integer" />
        <attr name="gradientColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="verticalOffset" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="showGradient" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MenuItem">
        <attr name="menu_title" format="string" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <style name="Animation_top_left">
        <item name="android:windowEnterAnimation">@anim/widget_open_top_left</item>
        <item name="android:windowExitAnimation">@anim/widget_close_top_left</item>
    </style>

    <style name="Animation_bottom_left">
        <item name="android:windowEnterAnimation">@anim/widget_open_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/widget_close_bottom_left</item>
    </style>

    <style name="Animation_bottom_right">
        <item name="android:windowEnterAnimation">@anim/widget_open_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/widget_close_bottom_right</item>
    </style>
    <style name="Animation_top_right">
        <item name="android:windowEnterAnimation">@anim/widget_open_top_right</item>
        <item name="android:windowExitAnimation">@anim/widget_close_top_right</item>
    </style>

    <style name="dialog_time_style" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!--设置header部分显示的颜色-->
        <item name="colorPrimary">@color/base_color_theme</item>
        <item name="colorPrimaryDark">@color/base_color_theme</item>
        <item name="colorAccent">@color/base_color_theme</item>
    </style>

    <!--仿微信字体大小调整 FontSizeView-->
    <declare-styleable name="FontSizeView">
        <attr name="lineWidth" format="dimension|reference" />
        <attr name="lineColor" format="color|reference" />
        <attr name="totalCount" format="integer" />
        <attr name="circleColor" format="color|reference" />
        <attr name="circleRadius" format="dimension|reference" />

        <attr name="textFontColor" format="color|reference" />
        <attr name="smallSize" format="integer" />
        <attr name="standerSize" format="integer" />
        <attr name="bigSize" format="integer" />
        <attr name="defaultPosition" format="integer" />
    </declare-styleable>


    <style name="BottomSheetDialog" parent="AlertDialog.AppCompat">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/widget_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/widget_dialog_exit</item>
    </style>

    <style name="ShapeCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="shape_buttonDrawable">@drawable/widget_shape_view_placeholder</item>
    </style>

    <style name="ShapeRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="shape_buttonDrawable">@drawable/widget_shape_view_placeholder</item>
    </style>

    <declare-styleable name="Fp_ShadowLayout">
        <attr name="fp_shadowColor" format="color"/>
        <attr name="fp_shadowRadius" format="dimension"/>
        <attr name="fp_shadowRoundRadius" format="dimension"/>
        <attr name="fp_shadowShape">
            <flag name="fp_rectangle" value="0x0001"/>
            <flag name="fp_round_rectangle" value="0x0100"/>
        </attr>
        <attr name="fp_shadowSide">
            <flag name="fp_all" value="0x1111"/>
            <flag name="fp_left" value="0x0001"/>
            <flag name="fp_top" value="0x0010"/>
            <flag name="fp_right" value="0x0100"/>
            <flag name="fp_bottom" value="0x1000"/>
        </attr>
        <attr name="fp_round_corner">
            <flag name="fp_corner_all" value="0x1111"/>
            <flag name="fp_corner_leftTop" value="0x0001"/>
            <flag name="fp_corner_leftBottom" value="0x0010"/>
            <flag name="fp_corner_rightTop" value="0x0100"/>
            <flag name="fp_corner_rightBottom" value="0x1000"/>
        </attr>
    </declare-styleable>


    <style name="large_title_text" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base_dimen_16</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="title_text" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base_dimen_16</item>
        <item name="android:textColor">@color/widget_title_color</item>
    </style>

    <style name="content_text" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base_dimen_14</item>
        <item name="android:textColor">@color/widget_content_color</item>
    </style>

</resources>