<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knight.kotlin.module_home.adapter.SearchRecordAdapter"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_cl_searchkeyword_height"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_searchkeyword_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/home_iv_searchkeyword_time_margin_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/home_icon_time"
        />

    <TextView
        android:id="@+id/tv_search_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_searchkeyword_time"
        android:layout_marginLeft="@dimen/home_tv_search_keyword_margin_left"
        android:textColor="@color/home_tv_search_keyword_color"
        android:text="232323"
        />

    <ImageView
        android:id="@+id/iv_searchkeyword_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/home_icon_cancel"
        android:layout_marginRight="@dimen/home_iv_searchkeyword_delete_margin_right"
        />




</androidx.constraintlayout.widget.ConstraintLayout>