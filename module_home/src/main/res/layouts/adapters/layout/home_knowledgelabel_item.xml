<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/home_knowledge_label_margin_right">

    <RelativeLayout
        android:id="@+id/home_rl_knowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_rl_knowledge_margin_left"
        android:layout_marginTop="@dimen/home_rl_knowledge_margin_top"
        android:layout_marginRight="@dimen/home_rl_knowledge_margin_right"
        android:layout_marginBottom="@dimen/home_rl_knowledge_margin_bottom">

        <TextView
            android:id="@+id/home_tv_knowledge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_tv_knowledge_height"
            android:background="@drawable/home_hotkeyframe_shape"
            android:gravity="center"
            android:paddingLeft="@dimen/home_tv_knowledge_paddding_left"
            android:paddingRight="@dimen/home_tv_knowledge_paddding_right"
            android:text="sdsdsdsdsd"
            android:textColor="@color/base_color_theme"
            android:textSize="@dimen/home_tv_knowledge_text_size"
            />


    </RelativeLayout>

    <ImageView
        android:id="@+id/home_iv_moreknowledge_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/home_rl_knowledge"
        android:layout_marginRight="-8dp"
        android:background="@drawable/widget_label_delete"
        />

</RelativeLayout>