<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



    <com.knight.kotlin.library_widget.EasyFlipView
        android:id="@+id/flip_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_fp_weather_margin_top"
        android:layout_marginRight="@dimen/home_fp_weather_margin_right"
        android:layout_marginLeft="@dimen/home_fp_weather_margin_left"
        >


        <include
            android:id="@+id/home_today_news_item"
            layout="@layout/home_today_news_item" />

        <include
            android:id="@+id/home_today_weather_item"
            layout="@layout/home_today_weather_item" />


    </com.knight.kotlin.library_widget.EasyFlipView>

    <ImageView
        android:id="@+id/iv_weather_news_close"
        android:layout_width="@dimen/home_iv_weather_news_close_width"
        android:layout_height="@dimen/home_iv_weather_news_close_height"
        android:layout_marginTop="@dimen/home_iv_weather_news_margin_top"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/home_icon_white_circle_close"/>


</LinearLayout>



