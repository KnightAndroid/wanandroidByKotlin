<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knight.kotlin.module_message.adapter.MessageAdapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/message_cv_margin_left"
    android:layout_marginTop="@dimen/message_cv_margin_top"
    android:layout_marginRight="@dimen/message_cv_margin_right"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/base_dimen_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_8">

        <TextView
            android:id="@+id/message_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/message_item_author_margin_start"
            android:layout_marginTop="@dimen/message_item_author_margin_top"
            android:paddingEnd="@dimen/message_item_author_padding_end"
            android:textColor="@color/message_item_author_color"
            android:textSize="@dimen/message_item_author_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/message_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/base_articlechapter_type"
            android:textColor="@color/message_item_tag_color"
            android:textSize="@dimen/message_item_tag_text_size"
            app:layout_constraintBottom_toBottomOf="@id/message_item_author"
            app:layout_constraintLeft_toRightOf="@id/message_item_author"
            app:layout_constraintTop_toTopOf="@id/message_item_author"
            android:paddingTop="@dimen/message_item_tag_padding_top"
            android:paddingBottom="@dimen/message_item_tag_padding_bottom"
            android:paddingLeft="@dimen/message_item_tag_padding_left"
            android:paddingRight="@dimen/message_item_tag_padding_right"/>


        <TextView
            android:id="@+id/message_item_nicedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/message_item_nicedata_margin_end"
            android:textColor="@color/message_item_nicedata_color"
            android:textSize="@dimen/message_item_nicedata_text_size"
            app:layout_constraintBottom_toBottomOf="@id/message_item_author"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/message_item_author" />

        <TextView
            android:id="@+id/message_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/message_tv_title_margin_left"
            android:layout_marginTop="@dimen/message_tv_title_margin_top"
            android:layout_marginRight="@dimen/message_tv_title_margin_right"
            android:textColor="@color/message_tv_title_color"
            android:textSize="@dimen/message_tv_title_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_item_author" />


        <TextView
            android:id="@+id/message_tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/message_tv_desc_margin_left"
            android:layout_marginTop="@dimen/message_tv_desc_margin_top"
            android:layout_marginRight="@dimen/message_tv_desc_margin_left"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:textColor="@color/message_tv_desc_color"
            android:textSize="@dimen/message_tv_desc_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_tv_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
