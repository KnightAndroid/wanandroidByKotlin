<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="base_AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">#55aff4</item>


        <!-- 必须添加的属性 -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <item name="colorOnBackground">@android:color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>

    </style>

    <!-- 确定按钮样式-->
    <style name="base_positiveBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#55aff4</item>
    </style>

    <!--取消按钮样式-->
    <style name="base_negativeBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#999999</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- base 弹窗 -->
    <style name="base_dialog_anim" parent="@android:style/Animation.Dialog">
         <item name="android:windowEnterAnimation">@anim/base_bottom_show_anim</item>
         <item name="android:windowExitAnimation">@anim/base_bottom_hide_anim</item>
    </style>

    <style name="base_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">

    </style>

    <style name="base_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight"/>

    <!--圆形图片样式-->
    <style name="base_circleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!--圆角图片样式-->
    <style name="base_roundedCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/base_dimen_4</item>
    </style>





</resources>