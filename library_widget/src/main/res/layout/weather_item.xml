<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_item_click"
    android:orientation="horizontal"
    tools:background="#000">

    <View
        android:id="@+id/line_one"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#eee" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="昨天"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:text="12/07"
            android:textColor="#fff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_day_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:text="晴"
            android:textColor="#fff"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_day_weather"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/widget_big_level_shape" />

        <com.knight.kotlin.library_widget.TemperatureView
            android:id="@+id/ttv_day"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/iv_night_weather"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/widget_big_level_shape" />

        <TextView
            android:id="@+id/tv_night_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:text="晴"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_wind_ori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:text="西南风"
            android:textColor="#fff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_wind_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:text="3级"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_air_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/widget_good_level_shape"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:text="良"
            android:textColor="#fff"
            android:textSize="11dp" />
    </LinearLayout>

    <View
        android:id="@+id/line_two"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#eee" />


</LinearLayout>