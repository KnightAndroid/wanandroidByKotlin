<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_sharearticle_item_bg_color"
    android:foreground="?android:attr/selectableItemBackground">



    <TextView
        android:id="@+id/mine_tv_share_articleauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_tv_share_articleauthor_margin_left"
        android:layout_marginTop="@dimen/mine_tv_share_articleauthor_margin_top"
        android:paddingRight="@dimen/mine_tv_share_articleauthor_padding_right"
        tools:text="232323"
        android:textColor="@color/mine_tv_share_articleauthor_text_color"
        android:textSize="@dimen/mine_tv_share_articleauthor_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mine_tv_share_articlenew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_tv_share_articlenew_margin_left"
        android:background="@drawable/base_article_new"
        android:text="新"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/mine_tv_share_articlenew_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/mine_tv_share_articleauthor"
        app:layout_constraintLeft_toRightOf="@+id/mine_tv_share_articleauthor"
        app:layout_constraintTop_toTopOf="@+id/mine_tv_share_articleauthor" />

    <TextView
        android:id="@+id/mine_tv_share_articledate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/mine_tv_share_articledata_margin_right"
        android:text="一天前"
        android:textColor="@color/mine_tv_share_articledata_text_color"
        android:textSize="@dimen/mine_tv_share_articledata_text_size"
        app:layout_constraintBottom_toBottomOf="@id/mine_tv_share_articleauthor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mine_tv_share_articleauthor" />

    <TextView
        android:id="@+id/mine_tv_share_articletitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_tv_share_articletitle_margin_left"
        android:layout_marginTop="@dimen/mine_tv_share_articletitle_margin_top"
        android:layout_marginRight="@dimen/mine_tv_share_articletitle_margin_right"
        android:text="这是标题标题这是标题标题这是标题标题这是标题标题这是标题标题"
        android:textColor="@color/mine_tv_share_articletitle_text_color"
        android:textSize="@dimen/mine_tv_share_articletitle_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mine_tv_share_articleauthor" />

    <TextView
        android:id="@+id/mine_tv_share_articlechaptername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mine_tv_share_articlechaptername_margin_top"
        android:background="@drawable/base_articlechapter_type"
        android:paddingLeft="@dimen/mine_tv_share_articlechaptername_padding_left"
        android:paddingTop="@dimen/mine_tv_share_articlechaptername_padding_top"
        android:paddingRight="@dimen/mine_tv_share_articlechaptername_padding_right"
        android:paddingBottom="@dimen/mine_tv_share_articlechaptername_padding_bottom"
        android:text="广泛他"
        android:textColor="@color/base_color_theme"
        android:textSize="@dimen/mine_tv_share_articlechaptername_text_size"
        app:layout_constraintLeft_toLeftOf="@id/mine_tv_share_articleauthor"
        app:layout_constraintTop_toBottomOf="@id/mine_tv_share_articletitle" />

    <ImageView
        android:id="@+id/mine_iv_share_articles_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/mine_iv_share_articles_delete_margin_right"
        android:background="@drawable/mine_icon_delete"
        app:layout_constraintBottom_toBottomOf="@id/mine_tv_share_articlechaptername"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mine_tv_share_articlechaptername" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_8"
        android:layout_marginTop="@dimen/base_dimen_16"
        android:background="@color/base_item_bottom_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mine_iv_share_articles_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>